{
  "name": "portfolio-v3",
  "version": "1.0.0",
  "description": "My personal portfolio",
  "author": "Erwan Jugand (@erwanjugand)",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "dev:alt": "PORT=8080 nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "lintcss": "stylelint **/*.{scss,vue}",
    "lintcss:fix": "yarn lintcss --fix",
    "svg:opti": "svgo --config=svgo.json static/ -r --indent=2 --pretty --multipass",
    "jpg:opti": "find static/images/ -type f -name '*.jpg' | xargs jpegoptim --strip-all",
    "png:opti": "find static/images/ -type f -name '*.png' | xargs optipng",
    "image:opti": "yarn run svg:opti && yarn run jpg:opti && yarn run png:opti"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.12.1",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "@types/ua-parser-js": "^0.7.33",
    "babel-eslint": "^10.1.0",
    "directivue": "^0.1.5",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^4.14.1",
    "nuxt": "^2.14.3",
    "nuxt-i18n": "6.15.4",
    "nuxt-typed-vuex": "^0.1.20",
    "sass-loader": "^9.0.3",
    "ua-parser-js": "^0.7.21"
  },
  "devDependencies": {
    "@nuxt/components": "^1.1.0",
    "@nuxt/types": "^2.14.3",
    "@nuxt/typescript-build": "^2.0.2",
    "@nuxtjs/color-mode": "^1.0.3",
    "@nuxtjs/date-fns": "^1.3.1",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config": "^3.1.0",
    "@nuxtjs/eslint-config-typescript": "^3.0.0",
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/pwa": "^3.0.1",
    "@nuxtjs/svg": "^0.1.11",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0"
  }
}
